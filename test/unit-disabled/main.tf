variable "aws_region" {
  description = "(Required) The AWS region in which all resources will be created."
  type        = string
  default     = "us-east-1"
}

terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.0"
    }
  }
}

provider "aws" {
  region = var.aws_region
}

module "test" {
  source = "../.."

  name = "ecs-test-cluster"

  module_enabled = false
}

